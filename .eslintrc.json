{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": ["plugin:react/recommended", "prettier", "prettier/react"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "jsx": true,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "windows"],
    "prettier/prettier": [
      "error",
      {
        "usePrettierrc": false,
        "jsxBracketSameLine": true,
        "semi": false,
        "singleQuote": true,
        "trailingComma": "all"
      }
    ]
  },
  "settings": {
    "react": {
      "version": "16.8.1"
    }
  }
}
