{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:flowtype/recommended",
    "prettier",
    "prettier/react",
    "prettier/flowtype",
    "plugin:jsx-a11y/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "jsx": true,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier", "jsx-a11y", "react-hooks", "flowtype"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "windows"],
    "prettier/prettier": [
      "error",
      {
        "usePrettierrc": false,
        "jsxBracketSameLine": true,
        "semi": false,
        "singleQuote": true,
        "trailingComma": "all"
      }
    ],
    "react-hooks/rules-of-hooks": "error"
  },
  "settings": {
    "react": {
      "version": "16.8.1",
      "flowVersion": "0.92.1"
    },
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  }
}
